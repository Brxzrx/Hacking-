    let currentIndex = 0;
    let progress = 0;

    function typeMessage() {
        if (currentIndex >= messages.length) return;

        const msg = messages[currentIndex];

        if (msg.text === 'PROGRESS') {
            showProgress();
        } else if (msg.text === 'COUNTDOWN') {
            startCountdown();
        } else {
            const line = document.createElement('div');
            line.className = 'line';
            line.textContent = msg.text;
            output.appendChild(line);

            // Keep only last MAX_LINES lines
            const lines = output.querySelectorAll('.line');
            if (lines.length > MAX_LINES) {
                lines[0].remove();
            }
        }

        currentIndex++;
        setTimeout(typeMessage, msg.delay);
    }

    function showProgress() {
        progressContainer.style.display = 'block';

        const interval = setInterval(() => {
            progress += Math.random() * 10 + 5;
            if (progress >= 100) {
                progress = 100;
                clearInterval(interval);
                setTimeout(() => {
                    progressContainer.style.display = 'none';
                    typeMessage();
                }, 800);
            }
            progressFill.style.width = progress + '%';
            progressText.textContent = `Ø¬Ø§Ø±ÙŠ Ø§Ù„Ø³Ø±Ù‚Ø©... ${Math.floor(progress)}%`;
        }, 200);
    }

    function startCountdown() {
        // Clear output to make countdown prominent
        output.innerHTML = '';
        countdownContainer.style.display = 'block';
        let count = 5;

        const interval = setInterval(() => {
            countdownNumber.textContent = count;
            count--;

            if (count < 0) {
                clearInterval(interval);
                showReveal();
            }
        }, 1000);
    }

    function showReveal() {
        countdownContainer.style.display = 'none';
        output.innerHTML = '';
        document.querySelector('.header').style.display = 'none';
        reveal.style.display = 'block';
    }

    // Start
    setTimeout(typeMessage, 1000);
